<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.main.AulaDetailFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/nome_aluno_turma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textAppearance="?attr/textAppearanceHeadline6"
        tools:text="Leandro"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/ic_valor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_baseline_calendar_today_24"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/nome_aluno_turma"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/valor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:textAppearance="?attr/textAppearanceBody2"
        app:layout_constraintStart_toEndOf="@id/ic_valor"
        app:layout_constraintTop_toTopOf="@+id/ic_valor"
        app:layout_constraintBottom_toBottomOf="@id/ic_valor"
        tools:text="Quarta-feira, 16/08/2022" />

    <View
        android:id="@+id/divider_valor"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?attr/dividerHorizontal"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/valor"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/ic_duracao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_baseline_watch_later_24"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/divider_valor"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/duracao"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:textAppearance="?attr/textAppearanceBody2"
        app:layout_constraintStart_toEndOf="@id/ic_duracao"
        app:layout_constraintTop_toTopOf="@+id/ic_duracao"
        app:layout_constraintBottom_toBottomOf="@id/ic_duracao"
        tools:text="30 min" />

    <View
        android:id="@+id/divider_preco_mes"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?attr/dividerHorizontal"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/duracao"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/ic_preco_mes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_baseline_attach_money_24"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/divider_preco_mes"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/preco_mes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:textAppearance="?attr/textAppearanceBody2"
        app:layout_constraintStart_toEndOf="@id/ic_preco_mes"
        app:layout_constraintTop_toTopOf="@+id/ic_preco_mes"
        app:layout_constraintBottom_toBottomOf="@id/ic_preco_mes"
        tools:text="Valor da aula: R$30,00" />

    <View
        android:id="@+id/divider_notas"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?attr/dividerHorizontal"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/preco_mes"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/ic_notas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/divider_notas"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_notes_24"/>

    <TextView
        android:id="@+id/notas_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:text="@string/anotacoes_botao"
        android:textAppearance="?attr/textAppearanceBody2"
        app:layout_constraintStart_toEndOf="@id/ic_notas"
        app:layout_constraintTop_toTopOf="@id/ic_notas"
        app:layout_constraintBottom_toBottomOf="@id/ic_notas"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/ic_notas"
        app:layout_constraintStart_toStartOf="@id/notas_label"
        tools:text="Parou na pÃ¡gina 23"/>



    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/edit_aluno_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        app:srcCompat="@drawable/ic_edit_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>




